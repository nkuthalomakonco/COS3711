/* Set background and text color for all QTabWidget */
QTabWidget {
    background-color: #ffffff; /* White */
    color: #000000; /* Black */
    border: 1px solid #8a8a8a; /* Light gray */
    border-radius: 5px;
}

/* Set background color for all QTabBar */
QTabBar {
    background-color: #ffffff; /* White */
    color: #000000; /* Black */
}

/* Set background and text color for all QMenuBar */
QMenuBar {
